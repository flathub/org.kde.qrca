{
    "id": "org.kde.qrca",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "qrca",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--system-talk-name=org.freedesktop.NetworkManager"
    ],
    "modules": [
        {
            "name": "libndp",
            "buildsystem": "autotools",
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jpirko/libndp/archive/v1.9.tar.gz",
                    "sha256": "e564f5914a6b1b799c3afa64c258824a801c1b79a29e2fe6525b682249c65261",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 14944,
                        "stable-only": true,
                        "url-template": "https://github.com/jpirko/libndp/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "polkit",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlibs-only=true",
                "-Dauthfw=shadow"
            ],
            "cleanup": [
                "/bin/*",
                "/include",
                "/etc/pam.d",
                "/etc/dbus-1",
                "/lib/pkgconfig",
                "/lib/polkit-1",
                "/share/dbus-1/system-services/*",
                "/share/polkit-1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/polkit-org/polkit/archive/refs/tags/126.tar.gz",
                    "sha256": "2814a7281989f6baa9e57bd33bbc5e148827e2721ccef22aaf28ab2b376068e8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3682,
                        "stable-only": true,
                        "url-template": "https://github.com/polkit-org/polkit/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "NetworkManager",
            "buildsystem": "meson",
            "config-opts": [
                "-Dsystemdsystemunitdir=no",
                "-Ddbus_conf_dir=/app/etc/dbus-1/system.d",
                "-Diptables=/usr/bin/true",
                "-Ddnsmasq=/usr/bin/true",
                "-Dsession_tracking=no",
                "-Dselinux=false",
                "-Dsystemd_journal=false",
                "-Dlibaudit=no",
                "-Dwext=false",
                "-Dwifi=true",
                "-Dppp=false",
                "-Dmodem_manager=false",
                "-Dovs=false",
                "-Dnmcli=false",
                "-Dnmtui=false",
                "-Dintrospection=false",
                "-Dvapi=false",
                "-Ddocs=false",
                "-Dtests=no",
                "-Dfirewalld_zone=false",
                "-Dlibpsl=false",
                "-Dqt=false",
                "-Dnm_cloud_setup=false",
                "-Dnbft=false"
            ],
            "cleanup": [
                "/bin",
                "/etc",
                "/include",
                "/lib/pkgconfig",
                "/libexec",
                "/sbin",
                "/var"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/NetworkManager/NetworkManager/-/archive/1.54.1/NetworkManager-1.54.1.tar.gz",
                    "sha256": "3bec7f01698e416c58fe823d042de87fdc0e5ddf54d1871a8b65216070eb9a93",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 21197,
                        "stable-only": true,
                        "url-template": "https://gitlab.freedesktop.org/NetworkManager/NetworkManager/-/archive/$version/NetworkManager-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "networkmanager-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/6.20/networkmanager-qt-6.20.0.tar.xz",
                    "sha256": "6856fecb2933abcdad0a789a179e4054cf24901dc29f943f0036a3e15cf43e86",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/networkmanager-qt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "qrca",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.08.3/src/qrca-25.08.3.tar.xz",
                    "sha256": "ea5c179188c3da9239a35032c3651296d557b53dabe5134da4c14d8bea8232d7",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 261558,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/qrca-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
