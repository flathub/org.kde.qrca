{
    "id": "org.kde.qrca",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "qrca",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=all",
        "--system-talk-name=org.freedesktop.NetworkManager"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/girepository-1.0",
        "/share/doc",
        "/share/gir-1.0",
        "/share/gettext",
        "/share/qlogging-categories6",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libndp",
            "buildsystem": "autotools",
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jpirko/libndp/archive/v1.9.tar.gz",
                    "sha256": "e564f5914a6b1b799c3afa64c258824a801c1b79a29e2fe6525b682249c65261",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 14944,
                        "stable-only": true,
                        "url-template": "https://github.com/jpirko/libndp/archive/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "polkit",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlibs-only=true",
                "-Dauthfw=shadow"
            ],
            "cleanup": [
                "/bin/*",
                "/include",
                "/etc/pam.d",
                "/etc/dbus-1",
                "/lib/pkgconfig",
                "/lib/polkit-1",
                "/share/dbus-1/system-services/*",
                "/share/polkit-1"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/polkit-org/polkit/archive/refs/tags/127.tar.gz",
                    "sha256": "9b7bc16f086479dcc626c575976568ba4a85d34297a750d8ab3d2e57f6d8b988",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3682,
                        "stable-only": true,
                        "url-template": "https://github.com/polkit-org/polkit/archive/refs/tags/$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "NetworkManager",
            "buildsystem": "meson",
            "config-opts": [
                "-Dsystemdsystemunitdir=no",
                "-Ddbus_conf_dir=/app/etc/dbus-1/system.d",
                "-Diptables=/usr/bin/true",
                "-Ddnsmasq=/usr/bin/true",
                "-Dsession_tracking=no",
                "-Dselinux=false",
                "-Dsystemd_journal=false",
                "-Dlibaudit=no",
                "-Dwext=false",
                "-Dwifi=true",
                "-Dppp=false",
                "-Dmodem_manager=false",
                "-Dovs=false",
                "-Dnmcli=false",
                "-Dnmtui=false",
                "-Dintrospection=false",
                "-Dvapi=false",
                "-Ddocs=false",
                "-Dtests=no",
                "-Dfirewalld_zone=false",
                "-Dlibpsl=false",
                "-Dqt=false",
                "-Dnm_cloud_setup=false",
                "-Dnbft=false",
                "-Dman=false"
            ],
            "cleanup": [
                "/bin",
                "/etc",
                "/include",
                "/lib/pkgconfig",
                "/libexec",
                "/sbin",
                "/var"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/NetworkManager/NetworkManager/-/archive/1.56.0/NetworkManager-1.56.0.tar.gz",
                    "sha256": "42c1249f2e7c1d877ae03b63540d8d81fed94fabcdb4186b247295ac24d4088e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 21197,
                        "stable-only": true,
                        "url-template": "https://gitlab.freedesktop.org/NetworkManager/NetworkManager/-/archive/$version/NetworkManager-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "networkmanager-qt",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/6.23/networkmanager-qt-6.23.0.tar.xz",
                    "sha256": "48e7e5d5aaccb4096a1d1a46b570a885cefb48fa4631e89d83b7ef00e0a8cad2",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/networkmanager-qt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "qrca",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/qrca-25.12.2.tar.xz",
                    "sha256": "477c8b83915a8e56e2fe7c1ea892cdb0d9283d6e9051030cc7ba9bd53ff073bc",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 261558,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/qrca-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
